{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "sourceMap": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },
    "allowJs": true,
    "types": [
      "node",
      "@nativescript-dom/core-types",
      "@nativescript-dom/solidjs-types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["app"],
  "exclude": ["node_modules", "platforms"],
  "files": ["./app/index.ts", "./app/polyfills.ts"]
}
